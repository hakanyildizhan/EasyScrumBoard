<Window x:Class="EasyScrumBoard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyScrumBoard"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>

        <TextBlock Text="Welcome!" FontSize="40"/>
        <TextBlock Text="Welcome!" FontFamily="{StaticResource LatoRegular}" FontSize="40"/>
        <TextBlock Text="Welcome!" FontFamily="{StaticResource LatoThin}" FontSize="40"/>

        <Label Content="TextLabel" FontSize="30" />
        <TextBox Text="TextBox" FontSize="30"/>
    </StackPanel>
</Window>
